#Question 3
#[leapyear.py]
year = int(input("Enter the year (yyyy): "))
leap = (year/4)
if leap == int(leap):
 print(year," is a leap year!")
else:
 print(year," is not a leap year")

#Question 4
#[randint.py]
import random as rd
print("[Random Number Generator]")
a = int(input("Enter the lower bound: "))
b = int(input("Enter the higher bound: "))
rand_int = rd.randint(a,b)
print("Number: ", rand_int)

#Question 5
#[ dates.py ]
d = int(input("Enter the day of the month: "))
m = int(input("Enter the number of the month: "))
if 4<=m<=5 :
 print("True")
elif m ==3 and d >= 20 :
 print("True")
elif m == 6 and d <= 20 :
 print("True")
else:
 print("False")
 
 #Question 6
 #[ Accumulated value calculator]
t = int(input("Enter the number of years: "))
P = int(input("Enter the principal amount: "))
r = float(input("Enter the annual interest rate as a decimal: "))
from math import *
acc_val = P*e**(r*t)
print("The accumulated value after", t, "years is", acc_val)
